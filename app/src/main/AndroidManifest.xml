<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.cned.emdsgil.suividevosfrais">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Vue.EtapesActivity"></activity>
        <activity android:name=".Vue.RepasActivity" />
        <activity android:name=".Vue.NuitActivity" />
        <activity android:name=".Vue.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="recipe-app.com"
                    android:pathPrefix="/recipes"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".Vue.HfActivity" />
        <activity android:name=".Vue.HfRecapActivity" />
        <activity android:name=".Vue.KmActivity" />
    </application>

</manifest>